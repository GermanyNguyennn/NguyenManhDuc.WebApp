@using NguyenManhDuc.WebApp.Models
@model ColorModel
@{
    ViewData["Title"] = "Thêm Màu Sắc";
}
<div class="">
    <form asp-action="Add" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label>Tên Màu Sắc</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Mã Màu Sắc</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>       

        <div class="form-group">
            <button class="btn btn-warning btn-sm">Thêm</button>
            <a asp-action="Index" asp-controller="Color" class="btn btn-warning btn-sm">Quay Lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
