@using NguyenManhDuc.WebApp.Models
@using NguyenManhDuc.WebApp.Repository
@using NguyenManhDuc.WebApp.Repository.Validation
@model IEnumerable<ColorModel>
@{
    ViewData["Title"] = "Danh Sách Màu Sắc";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }
}
<div class="">
    <p><a asp-controller="Color" asp-action="Add" class="btn btn-warning btn-sm">Thêm Màu Sắc</a></p>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tên Màu Sắc</th>
                <th scope="col">Mã Màu Sắc</th>
                <th scope="col">Slug</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Color</td>
                    <td>@item.Code</td>
                    <td>@item.Slug</td>                   
                    <td>
                        <a asp-controller="Color" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-controller="Color" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-warning btn-sm confirmDeletion">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Paging" model="@pager" />
</div>